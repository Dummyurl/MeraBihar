<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/event_layout"
        android:elevation="4dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foregroundGravity="fill"
               >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="@drawable/budha_st"
                    android:id="@+id/event_banner_image"
                    android:scaleType="fitXY"
                    />
                <View
                    android:background="@color/transparentBlack"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:text="Bodh Gaya"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:id="@+id/event_name"
                    android:textColor="#FFFFFF"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bihar"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:layout_marginTop="18dp"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:id="@+id/event_place"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:text="10 items sold in last 48 hours"

                    android:paddingLeft="10dp"
                    android:id="@+id/no_of_sellings"
                    android:layout_gravity="bottom"
                    android:background="@color/colorPrimary"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="% discount"
                    android:id="@+id/activity_discount"
                    android:background="@color/colorAccent"
                    android:textSize="14dp"
                    android:textColor="#ffffff"
                    android:layout_gravity="bottom|right"/>
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:background="@color/colorPrimaryDark"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="left|center_horizontal"
                    android:layout_gravity="left|center_horizontal"
                    android:layout_weight="5"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="Bodh Gaya"
                        android:textColor="@color/colorAccent"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bihar"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:paddingRight="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹ 120"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:id="@+id/event_display_price"
                        android:background="@drawable/text_striker"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹ 99"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:id="@+id/event_selling_price"
                        android:paddingLeft="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@android:color/holo_red_light"
                        android:id="@+id/event_no_of_units_left"
                        android:paddingLeft="10dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>